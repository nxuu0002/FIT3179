{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 case count by state in AU",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/nxuu0002/FIT3179/main/js/choropleth_map.json",
    "format": {
          "type": "json",
          "feature": "STE_2016_AUST"
        }
  },
  "transform": [{
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/nxuu0002/FIT3179/main/data/case_count_by_state.csv"
        },
        "key": "State",
        "fields": ["Cumulative case count"]
      }
    },
    {"calculate": "datum.Cumulative case count + 0.1", "as": "Active Cases"}
    
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Active Cases",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
      {"field": "Cumulative case count", "type": "quantitative"}
    ]
  }

}
